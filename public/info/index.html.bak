          </table>
        </td>
      </tr>
    </table>
  </div>
  <!--end_section_layout-->

  <!--begin_section_data-->
  <script id="data" lang="js">
    let template = `<tr class="identity_row">
      <td>
        <table class="identity_detail">
          <tr>
            <td class="detail_line1" >{{line1}}</td>

            <td a class="detail_line2" >{{line2}}</td>
          </tr>
        </table>
      </td>
      <td>
        <div class="qr_img" style="background-image: url('img/{{qrurl}}');"></div>
      </td>
    </tr>`

    <!--identity_data_placeholder-->

  </script>
  <!--end_section_data-->

  <!--begin_section_code-->
  <script id="code" lang="js">
    function render() {
      document.getElementById("identity_table").innerHTML = '';

      ids.forEach(id => {
        var html = template.replace('{{line1}}', id.line1).replace('{{line2}}', id.line2).replace('{{qrurl}}', id.qrurl);
        document.getElementById("identity_table").innerHTML += html;
      });

      var ids_script = document.getElementById("identity_data").innerText;
      document.getElementById("cdh").innerHTML = sha256(ids_script);

      if (document.getElementById("cdh").innerHTML != document.getElementById("sdh").innerHTML) {
        document.getElementById("cdh").style.color = "red";
        document.getElementById("sdh").style.color = "red";
      }

      var xhr = new XMLHttpRequest();
      var url = 'https://keys.openpgp.org/vks/v1/by-fingerprint/464DFCD0B1DB6B5ADDC9691F90B6CEB01BE86461';

      xhr.open('GET', url, true);

      xhr.onreadystatechange = function () {
        if (xhr.readyState == 4 && xhr.status == 200) {
          setTimeout(function () {
            document.getElementById('cpk').innerText = xhr.responseText
              .replace(/</, "[")
              .replace(/>/, "]");
          }, 1000);
        }
      }

      xhr.send();
    }

    window.render();

    //sha256_placeholder
  </script>
  <!--end_section_code-->
</body>

</html>
